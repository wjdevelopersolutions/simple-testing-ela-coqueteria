mixin productDetail
    .wrapper
        .breadcrumb-wrapper
            .breadcrumb-area.breadcrumbs.overlay-bg
                .container
                    .row
                        .col-12
                            .breadcrumb-content.text-center
                                h1= state.product.Prod_Title.slice(0, 40) 
                                    |   &nbsp;
                                    a.ui.empty.circular.label(class= state.product.Prod_Avaliable > 0 ? 'green' : 'red') 
                                nav(role='navigation' aria-label='breadcrumbs')
                                    ul.breadcrumb-list
                                        li
                                            a(href='#') shop
                                        li
                                            a(href='#') product
                                            span= state.product.Prod_Slug_Url
        main
            #shopify-section-product-template.shopify-section
                .single-product-area.mt-80.mb-80
                    .container
                        .row
                            .col-md-5
                                #ProductPhoto.product-details-large
                                    img#ProductPhotoImg.product-zoom(data-image-id='' alt='12. Aliexpress dropshipping by oberlo' data-zoom-image= state.product.Prod_Images[0] src= state.product.Prod_Images[0])
                                #ProductThumbs.product-thumbnail.owl-carousel.mt-5
                                    each image in state.product.Prod_Images
                                        a.product-single__thumbnail.active(href='#' data-image= image data-zoom-image= image data-image-id= state.product._id)
                                            img(src= image alt= state.product.Prod_Title)
                            .col-md-7
                                .single-product-content
                                    form#AddToCartForm.shopify-product-form(method='post' accept-charset='UTF-8' enctype='multipart/form-data')
                                        input(type='hidden' name='form_type' value='product')
                                        input(type='hidden' name='utf8' value='âœ“')
                                        .product-details
                                            h1.single-product-name
                                                i.icon.tags
                                                | &nbsp; 
                                                for career in state.product.Prod_Careers
                                                    span= career
                                            .single-product-reviews
                                                span.shopify-product-reviews-badge(data-id='1912078270534')
                                            .product-sku
                                            a(class="ui tag label")= state.product.Prod_Condition
                                            .single-product-price
                                                .product-discount.d-flex.justify-content-between
                                                    span#ProductPrice.price
                                                        span.money RD$ #{state.product.Prod_Price} 
                                                    a.text-danger(href=`/compare/${state.product.Prod_Slug_Url}`) Comparar este producto
                                            .product-info
                                                | #{state.product.Prod_Description}
                                            .single-product-action
                                                .product-variant-option
                                                    select#productSelect.product-single__variants(name='id' style='display:none;')
                                                        option(selected='selected' data-sku='YQT71020193' value='19506517377094')
                                                            | Default Title - 
                                                            span.money RD$ #{state.product.Prod_Price}
                                                .product-add-to-cart
                                                    span.control-label Quantity
                                                    .cart-plus-minus
                                                        input.cart-plus-minus-box(type='text' name='quantity' value='1')
                                                    .add.d-flex
                                                        .ui.compact.menu.mr-4
                                                            .item
                                                                i.icon.handshake.outline 
                                                                |   Vendidos
                                                                .floating.ui.bg-danger.label= state.product.Prod_Sold
                                                            .item
                                                                i.icon.flag.outline 
                                                                |   Disponible
                                                                .floating.ui.bg-success.label= state.product.Prod_Avaliable
                                                        if isAuthenticated
                                                            button#AddToCart.ui.button(type='submit')
                                                                i.icon.shop
                                                                a#add-to-cart.list-cart-title.cart-title(href="#" data-product= state.product.Prod_Slug_Url) Add to cart
                                                        .single-product-wishlist
                                                            a.add-to-cart.ui.button.d-flex(href='#' title='Wishlist')
                                                                i.fa.fa-heart.d-flex.align-self-center
                                                    .secure-payment.mt-5
                                                        img(src='http://cdn.shopify.com/s/files/1/0067/5617/1846/files/guaranteed_safe_checkout1.png?v=1545216773')


