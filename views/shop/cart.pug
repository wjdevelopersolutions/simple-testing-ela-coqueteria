extends ../layout

include ../components/breadcrumb
include ../components/product-card
include ../components/product-detail

block body

    +breadcrumb(state.breadcrumb)

    //- Declare vars
    - const products = state.products

    .row    
        .col-md-12.col-12.mt-5

            .ui.middle.aligned.divided.list
                for product in products
                    a.item(href=`/products/${product.Prod_Id.Prod_Slug_Url}`)
                        .right.floated.content
                            .ui.button Add
                        img.ui.avatar.image(src= product.Prod_Id.Prod_Images[0])
                        .content
                            | #{product.Prod_Id.Prod_Title} (#{product.Item_Quantity})

